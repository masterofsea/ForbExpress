@model ForbExpress.Models.Contract

@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <h4>Договор @(Model.ContractNumber)</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>

    <div class="card radius-15">
        <div class="card-body">
            <div class="card-title">
                <h4 class="mb-0">Nav Pills with JavaScript behavior</h4>
            </div>
            <hr>
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation"> <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Home</a>
                </li>
                <li class="nav-item" role="presentation"> <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</a>
                </li>
                <li class="nav-item" role="presentation"> <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Contact</a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade active show" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    <form asp-action="Update" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="Id" value="@Model.Id">

                            <div class="form-group">
                                <label asp-for="ContractNumber"></label>
                                <input asp-for="ContractNumber" class="form-control form-control-sm" placeholder="ИНН арендатора" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price1"></label>
                                <input asp-for="Price1" class="form-control form-control-sm" placeholder="Цена 1" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price2"></label>
                                <input asp-for="Price2" class="form-control form-control-sm" placeholder="Цена 2" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Ifts"></label>
                                <input asp-for="Ifts" class="form-control form-control-sm" placeholder="ИФНС" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>

                            <button type="submit" class="btn btn-light">Применить изменения</button>
                        </div>
                    </form>               
                </div>

                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <form asp-action="Update" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="Id" value="@Model.Id">

                            <div class="form-group">
                                <label asp-for="ContractNumber"></label>
                                <input asp-for="ContractNumber" class="form-control form-control-sm" placeholder="ИНН арендатора" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price1"></label>
                                <input asp-for="Price1" class="form-control form-control-sm" placeholder="Цена 1" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price2"></label>
                                <input asp-for="Price2" class="form-control form-control-sm" placeholder="Цена 2" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Ifts"></label>
                                <input asp-for="Ifts" class="form-control form-control-sm" placeholder="ИФНС" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>

                            <button type="submit" class="btn btn-light">Применить изменения</button>
                        </div>
                    </form>                
                </div>
                
                <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                    <form asp-action="Update" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="Id" value="@Model.Id">

                            <div class="form-group">
                                <label asp-for="ContractNumber"></label>
                                <input asp-for="ContractNumber" class="form-control form-control-sm" placeholder="ИНН арендатора" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price1"></label>
                                <input asp-for="Price1" class="form-control form-control-sm" placeholder="Цена 1" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price2"></label>
                                <input asp-for="Price2" class="form-control form-control-sm" placeholder="Цена 2" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>
                            <div class="form-group">
                                <label asp-for="Ifts"></label>
                                <input asp-for="Ifts" class="form-control form-control-sm" placeholder="ИФНС" onkeypress="if(this.value.length&gt;12) return false;">
                            </div>

                            <button type="submit" class="btn btn-light">Применить изменения</button>
                        </div>
                    </form>                
                </div>
                
                
            </div>
        </div>
    </div>

</div>