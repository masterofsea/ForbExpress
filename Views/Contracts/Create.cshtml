                    <span class="input-group-text">
                        <i data-feather="activity"></i>
                    </span>
                </div>
                <input type="text" asp-for="Lessee.Email" class="form-control border-left-0" id="email" placeholder="Email" value="@Model?.Lessee?.Email">
